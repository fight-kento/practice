<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post|%>
        <div class="posts-index-item">
          <div class="post-left">
            <img src="<%= "/user_images/#{post.user.image_name}" %>">
          </div>

          <div class="post-right">
            <div class="post-user-name">
              <%= link_to(post.user.name, "/users/#{post.user.id}") %>
            </div>
            <%= link_to(post.content, "/posts/#{post.id}") %>
            
            <div class='index_likes'>
              <% if Like.find_by(user_id: @current_user.id, post_id: post.id) %>
                <%= link_to("/likes/#{post.id}/destroy", data: { "turbo-method": :post },allow_other_host: true) do %>
                  <span class="fa fa-heart liked-btn"></span>
                <% end %>
              <% else %>
                <%= link_to("/likes/#{post.id}/create", data: { "turbo-method": :post },allow_other_host: true) do %>
                  <span class="fa fa-heart unliked-btn"></span>
                <% end %>
              <% end %>
            
              <%= @likes_count[post.id] %>
  
            </div>


            <div class="post-time">
              <%= time_ago_in_words(post.updated_at) %>
            </div>

          </div>  
        </div>
    <% end%>
  </div>
</div>